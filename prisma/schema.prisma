generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Proposal {
  id           String         @id @default(cuid())
  slug         String         @unique
  status       String         @default("DRAFT")
  logoUrl      String?
  showVision   Boolean        @default(true)
  showGoals    Boolean        @default(true)
  showWorkPlan Boolean        @default(true)
  showPricing  Boolean        @default(true)
  showNotes    Boolean        @default(true)
  showNoticed  Boolean        @default(false)
  expiresAt    DateTime?
  dataEn       String?
  dataAr       String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}
